@page "/"
@using System.Security.Claims

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <p>Autorisé</p>
        @foreach(Claim claim in @context.User.Claims)
        {
            <p>@($"{claim.Type} : {claim.Value}")</p>
        }
    </Authorized>
    <NotAuthorized>
        <p>Pas autorisé</p>
    </NotAuthorized>
</AuthorizeView>

@code{
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}